<%= form_for(@attachment) do |f| %>

  <% if @attachment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>
      <ul>
      <% @attachment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titolo %><br>
    <%= f.text_field :titolo %>
  </div>
  <div class="field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :descrizione %>
  </div>
  <div class="field">
    <%= f.label "Parole chiave (separate da virgola)" %><br>
    <%= f.text_area :parole %>
  </div>
  <div class="field">
    <%= f.label :allegato %><br>
    <%= f.file_field :allegato %>
    <%= link_to 'Scarica il file', @attachment.allegato.url, class: 'small button' if @attachment.allegato.exists? %><br>
  </div>
  <div class="field">
    <%= f.label "Sezione" %><br>
    <%= f.collection_select(:section_id, policy_scope(Section), :id, :titolo) %>
  </div>

  <div class="actions">
    <%= f.submit 'SALVA', class: 'button' %>
  </div>

<% end %>
