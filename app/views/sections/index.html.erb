<h1>Sezioni del sito
  <%= link_to 'Nuova sezione', new_section_path, class: 'large warning button float-right' %>
</h1>


<% @sections.each do |section| %>
    <div class="expanded row">
      <div class="large-3 columns"><%= link_to '<i class="fi-paperclip"></i> '.html_safe + " " + "/#{section.percorso}", "/#{section.percorso}", class: "medium secondary button bottone-largo" %></div>
      <div class="large-4 columns">
        <%= "<span class='warning label'>principale</span>".html_safe if section.principale %>
        <b><%= section.titolo %></b>
        <br><%= section.descrizione %>
      </div>
      <div class="large-5 columns">
        <%= link_to 'Nuova pagina', new_page_path(:section_id => section.id), class: "tiny warning button" %>
        <%= link_to 'Nuovo articolo', new_page_path(:section_id => section.id, :articolo => 1), class: "tiny warning button" %>
        <%= link_to 'Nuovo album', new_photoalbum_path(:section_id => section.id), class: "tiny warning button" %>
        <%= link_to 'Nuovo allegato', new_attachment_path(:section_id => section.id), class: "tiny warning button" %>
        <%= link_to 'ProprietÃ ', edit_section_path(section), class: "tiny primary button" %>
        <%= link_to 'Elimina', section, method: :delete, data: { confirm: 'Sei sicuro? Verranno cancellate tutte le pagine di questa sezione...' }, class: "tiny alert button" %>
      </div>
    </div>
<% end %>


