<%= render partial: "pages/cookielaw" %>
<%= render partial: "pages/header" %>

<p id="notice"><%= notice %></p>

<h1>Compiti assegnati</h1>

<table>
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Key</th>
      <th>Descrizione</th>
      <th>Stato</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.titolo %></td>
        <td><%= link_to assignment.key, "/assignments/#{ assignment.key }", class: 'primary button' %></td>
        <td><%= assignment.descrizione %></td>
        <td><%= assignment.stato %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo compito', new_assignment_path, class: 'warning button' %>

<p>&nbsp;</p>

<%= render partial: "pages/footer" %>