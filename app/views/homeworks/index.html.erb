<%= render partial: "pages/cookielaw" %>
<%= render partial: "pages/header" %>

<div class="row">

<h1>Lavori consegnati</h1>

<table>
  <thead>
    <tr>
      <th>Compito</th>
      <th>Url</th>
      <th>Note</th>
      <th>Voto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.assignment.titolo %></td>
        <td><%= homework.url %></td>
        <td><%= homework.note %></td>
        <td><%= homework.voto %></td>
        <td><%= link_to 'Show', homework %></td>
        <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
        <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>&nbsp;</p>

</div>

<%= render partial: "pages/footer" %>