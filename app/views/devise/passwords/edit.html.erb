<%= render partial: "pages/cookielaw" %>
<%= render partial: "pages/header" %>

<div class="row">
  <p>&nbsp;</p>

<h2>Cambia la tua password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, 'data-abide' => true, 'novalidate' => true }) do |f| %>
  <%= render 'layouts/errori', object: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="small-12 columns field">
    <label>Nuova password
    <% if @minimum_password_length %>
      <em>(minimo <%= @minimum_password_length %> caratteri)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", required: '' %>
    </label>
  </div>

  <div class="small-12 columns field">
    <label>Conferma la nuova password" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", required: '' %>
    </label>
  </div>

  <div class="small-12 columns actions">
    <%= f.submit "Cambia la password", class:'primary button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  <p>&nbsp;</p>
</div>

<%= render partial: "pages/footer" %>