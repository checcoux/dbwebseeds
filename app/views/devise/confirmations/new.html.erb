<%= render partial: "pages/cookielaw" %>
<%= render partial: "pages/header" %>

<div class="row">
  <p>&nbsp;</p>

  <h2>Rispedisci le istruzioni per la conferma dell'email</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, 'data-abide' => true, 'novalidate' => true }) do |f| %>
      <%= render 'layouts/errori', object: resource %>

  <div class="small-12 columns field">
    <label>Email
    <%= f.email_field :email, pattern: 'email', placeholder: 'es. mario@rossi.com', autofocus: true, required: '', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    <span class='form-error'>Inserisci un indirizzo email valido.</span>
    </label>
  </div>

  <div class="small-12 columns actions">
    <%= f.submit "Rispedisci le istruzioni", class:'primary button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<p>&nbsp;</p>
</div>

<%= render partial: "pages/footer" %>