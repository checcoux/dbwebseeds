<p>&nbsp;</p>
<%- if controller_name != 'sessions' %>
  <%= link_to "Accedi", new_session_path(resource_name) %><br />
  <%= link_to "Esci", destroy_user_session_path, :method => :delete %><br />
<% end -%>

<%- if false && devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Iscriviti", new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Password dimenticata?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Non hai ricevuto le istruzioni per confermare il tuo account?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Non hai ricevuto le istruzioni per sbloccare il tuo account?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
