              url: '/columns/' + id + '/' + action + '.js',
              type: 'POST',
              data: {
                authenticity_token: '<%= form_authenticity_token %>'
              }
              // success: function (response) {
              //   alert("La pagina è stata salvata.");
              // }
              // document.getElementById( 'notice' ).innerHTML = 'La pagina &egrave; stata salvata.';*/
            });
        }
