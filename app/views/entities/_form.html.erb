    <%= f.label :landing_page, "Landing page" %><br>
    <%= f.text_field :landing_page %>
  </div>
  <div class="field">
    <%= f.check_box :nativo %>
    <%= f.label :nativo %>
  </div>
  <div class="field">
    <%= f.check_box :vetrina %>
    <%= f.label :vetrina %>
  </div>
  <div class="field">
    <%= f.label :stato %><br>
    <%= f.number_field :stato %>
